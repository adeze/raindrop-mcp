{
    "name": "@adeze/raindrop-mcp",
    "version": "1.1.6",
    "description": "MCP Server for Raindrop.io",
    "main": "index.js",
    "module": "src/index.ts",
    "type": "module",
    "bin": {
        "raindrop-mcp": "./build/index.js"
    },
    "files": [
        "dist",
        "build"
    ],
    "private": false,
    "scripts": {
        "dev": "npm run start:stdio-streaming",
        "dev:http": "npm run start:http",
        "dev:original": "npm run start:original",
        "dev:optimized": "npm run start:optimized",
        "inspector": "npx @modelcontextprotocol/inspector node src/index.js",
        "inspector:http": "npx @modelcontextprotocol/inspector http://localhost:3002/mcp",
        "inspector:original": "npx @modelcontextprotocol/inspector http://localhost:3001/mcp",
        "inspector:optimized": "npx @modelcontextprotocol/inspector http://localhost:3002/mcp",
        "inspector:streaming": "npx @modelcontextprotocol/inspector node src/stdio-streaming.js",
        "type-check": "tsc --noEmit",
        "test": "npm test",
        "test:coverage": "npm test --coverage",
        "test:all": "node tests/index.js",
        "test:http": "node tests/test-client.js",
        "test:server": "node tests/test-server.js",
        "test:comparison": "node tests/test-comparison.js",
        "test:demo": "node tests/optimization-demo.js",
        "test:streaming": "node src/tests/test-streaming.js",
        "run build": "npm run build && node build/src/index.js",
        "build": "npm run type-check && node -e \"require('esbuild').build({ entryPoints: ['src/index.ts', 'src/http-server.ts', 'src/http-server-optimized.ts', 'src/stdio-streaming.ts'], bundle: false, outdir: 'build', format: 'esm', platform: 'node', target: 'node18', tsconfig: 'tsconfig.json' }).catch(() => process.exit(1))\"",
        "start": "node src/index.js",
        "start:stdio": "node src/index.js",
        "start:stdio-streaming": "node src/stdio-streaming.js",
        "start:http": "node src/http-server-optimized.js",
        "start:original": "node src/http-server.js", 
        "start:optimized": "node src/http-server-optimized.js",
        "start:sse": "node src/sse.js",
        "health": "curl -s http://localhost:3002/health | jq",
        "health:original": "curl -s http://localhost:3001/health | jq",
        "health:optimized": "curl -s http://localhost:3002/health | jq",
        "streaming:capabilities": "curl -s -X POST http://localhost:3002/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"method\":\"tools/call\",\"params\":{\"name\":\"getStreamingCapabilities\"},\"id\":1}' | jq",
        "streaming:test": "curl -s -X POST http://localhost:3002/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"method\":\"tools/call\",\"params\":{\"name\":\"streamSearchBookmarks\",\"arguments\":{\"search\":\"test\",\"streaming\":true,\"chunkSize\":10}},\"id\":1}' | jq",
        "debug": "npm run inspector",
        "debug:http": "npm run inspector:http",
        "debug:original": "npm run inspector:original",
        "debug:optimized": "npm run inspector:optimized",
        "debug:streaming": "npm run inspector:streaming",
        "clean": "rm -rf build",
        "prebuild": "npm run clean",
        "mcp": "node src/index.js",
        "bump:patch": "npm version patch",
        "bump:minor": "npm version minor",
        "bump:major": "npm version major",
        "npm:update": "npm update",
        "dxt:pack": "npx @anthropic-ai/dxt@latest pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adeze/raindrop-mcp.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "keywords": [
        "mcp",
        "raindrop.io",
        "modelcontextprotocol",
        "mcp-server",
        "raindrop"
    ],
    "author": "Adam E",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/adeze/raindrop-mcp/issues"
    },
    "homepage": "https://github.com/adeze/raindrop-mcp#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.13.3",
        "axios": "^1.10.0",
        "dotenv": "^16.6.1",
        "esm": "^3.2.25",
        "express": "^5.1.0",
        "rate-limiter-flexible": "^7.1.1",
        "zod": "^3.25.71",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@modelcontextprotocol/inspector": "^0.14.3",
        "@types/bun": "^1.2.17",
        "@types/express": "^5.0.3",
        "@types/node": "^24.0.10",
        "@vitest/coverage-v8": "^3.2.4",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "bun": "^0.0.91"
    }
}